<UserControl x:Class="CManager.Presentation.GuiApp.Views.CreateCustomerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel Margin="20" MaxWidth="400" HorizontalAlignment="Left">
        <TextBlock Text="Add New Customer" FontSize="24" Margin="0,0,0,20" />

        <TextBlock Text="First Name" Margin="0,5,0,2"/>
        <TextBox Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}" />

        <TextBlock Text="Last Name" Margin="0,5,0,2"/>
        <TextBox Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}" />

        <TextBlock Text="Email" Margin="0,5,0,2"/>
        <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" />

        <TextBlock Text="Phone Number" Margin="0,5,0,2"/>
        <TextBox Text="{Binding PhoneNumber, UpdateSourceTrigger=PropertyChanged}" />

        <TextBlock Text="Street Address" Margin="0,5,0,2"/>
        <TextBox Text="{Binding Street, UpdateSourceTrigger=PropertyChanged}" />

        <TextBlock Text="Postal Code" Margin="0,5,0,2"/>
        <TextBox Text="{Binding PostalCode, UpdateSourceTrigger=PropertyChanged}" />

        <TextBlock Text="City" Margin="0,5,0,2"/>
        <TextBox Text="{Binding City, UpdateSourceTrigger=PropertyChanged}" />

        <Button Content="Save Customer" 
                Command="{Binding SaveCommand}" 
                Height="35" Margin="0,20,0,0" />
    </StackPanel>
</UserControl>